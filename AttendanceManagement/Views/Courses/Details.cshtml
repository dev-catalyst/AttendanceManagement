@using AttendanceManagement.Models.ViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AttendanceManagement.Models.TimeTable.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    PageCardHeading pageCardHeading = new PageCardHeading
    {
        Heading = "Course - " + Model.Name,
        Icon = "Icons/_CourseIcon"
    };
    DetailsHeaderCard detailsHeaderCard = new DetailsHeaderCard
    {
        Heading = "Courses",
        EditText = Model.Code,
        Id = Model.Id,
        EditLink = "/Courses/Edit?id",
        HomeLink = "/Courses"
    };
}

<partial name="Common/_PageCardHeading" model="pageCardHeading"/>


<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container-xxl" id="kt_content_container">
        <div class="card">
            <partial name="Common/_DetailsHeaderCard" model="detailsHeaderCard"/>
            <div class="card-body pt-0">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Semester)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Semester)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Department)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Department.Id)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>


