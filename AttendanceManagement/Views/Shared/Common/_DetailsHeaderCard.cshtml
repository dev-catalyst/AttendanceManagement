<div class="card-header border-0 pt-6 pb-7">
    <div class="card-toolbar w-100">
        <div class="d-flex justify-content-between w-100" data-kt-customer-table-toolbar="base">
            <a href="@Model.HomeLink" type="button" class="btn btn-light-primary me-auto">
                All @Model.Heading
            </a>
            <button type="button" class="btn btn-primary ms-auto" onclick="ShowEdit('@Model.Id', '@Model.EditLink')">
                Edit @Model.EditText
            </button>
        </div>
    </div>
</div>

<script>
function ShowEdit(email, link){
    $.ajax({
        url : `${link}=${email}`,
        type : 'GET',
        success : function(data){
            $('#modal_edit_1').modal('show');
            $('#inner-body-display-edit-1').html(data);
        }
    })
}
</script>