<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AttendanceManagement</title>
    <link rel="shortcut icon" href="~/assets/media/logos/favicon.ico"/>

    <script src="~/assets/plugins/global/plugins.bundle.js"></script>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700?display=swap">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <link href="~/css/site.css" rel="stylesheet" type="text/css" />


    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css"/>
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css"/>

    <script src="~/js/SwupFormsPlugin.min.js" type="text/javascript"></script>
    <script src="~/js/swup.script.js" type="text/javascript"></script>
    <script defer src="~/js/swup.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>

    <script src="~/assets/js/scripts.bundle.js"></script>
    <script defer src="~/js/site.js" type="text/javascript"></script>


</head>

<body id="kt_body" onscroll="scrollVisible()" class="header-fixed header-tablet-and-mobile-fixed aside-fixed aside-secondary-disabled">

<div class="d-flex flex-column flex-root">
    <div class="page d-flex flex-row flex-column-fluid ">
        <partial name="Dashboard/_sidebar"/>
        <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
            <partial name="Dashboard/_header"/>
            <div class="transition-fade" id="swup">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<partial name="Modals/_Add"/>
<partial name="Modals/_Edit"/>

<partial name="Common/_ScrollToTop"/>

@await RenderSectionAsync("Scripts", false)
</body>
</html>